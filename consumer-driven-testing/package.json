{
  "name": "pact-demo",
  "version": "1.0.0",
  "description": "A simple Nodejs + jest project configuring contract tests with PactJS",
  "main": "src/index.js",
  "scripts": {
    "test:consumer": "jest __tests__/contract/consumer --runInBand --setupFiles ./__tests__/contract/helpers/pactSetup.js --setupTestFrameworkScriptFile=./__tests__/contract/helpers/pactTestWrapper.js",
    "test:provider": "jest __tests__/contract/provider --runInBand --force-exit",
    "publish:contract": "node __tests__/contract/helpers/publish.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peacebytes/pact_demo.git"
  },
  "keywords": [
    "nodejs",
    "contract-tests",
    "pactjs",
    "pact",
    "tutorial",
    "course"
  ],
  "license": "MIT",
  "devDependencies": {
    "@pact-foundation/pact": "9.9.3",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "jest": "^25.1.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
